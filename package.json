{
  "name": "canvas-hello-world",
  "version": "1.0.0",
  "description": "Простое приложение на HTML5 Canvas с TypeScript",
  "main": "index.js",
  "scripts": {
    "start": "parcel index.html",
    "build": "parcel build index.html --public-url /fun-with-ai-gravity/",
    "test": "jest --testPathIgnorePatterns=\\.integration\\.",
    "test:unit": "jest --testPathIgnorePatterns=\\.integration\\."
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "parcel-bundler": "^1.12.5",
    "ts-jest": "^29.1.2",
    "typescript": "^4.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
